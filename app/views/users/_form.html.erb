<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :mysingle_id %><br>
    <%= f.text_field :mysingle_id %>
  </div>

  <div>
      <%= image_tag @user.photo.url(:original), :id => "cropbox" %>
      <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
          <%= f.text_field attribute, :id => attribute %>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$(function() {
  $('#cropbox').Jcrop({
    onChange: update_crop,
    onSelect: update_crop,
    allowResize: false,
    allowSelect: false,
    animateTo: [0, 0, 492, 610],
    setSelect: [0, 0, 492, 610],
    aspectRatio: 492/610
  });
});

function update_crop(coords) {
  var ratio = <%= @user.avatar_geometry(:original).width %> / <%= @user.avatar_geometry(:mysingle).width %>; 
  $('#crop_x').val(Math.floor(coords.x * ratio));
  $('#crop_y').val(Math.floor(coords.y * ratio));
  $('#crop_w').val(Math.floor(coords.w * ratio));
  $('#crop_h').val(Math.floor(coords.h * ratio));  
}

</script>
